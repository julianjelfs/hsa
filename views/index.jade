extends layout

block body
  nav.top-bar
    ul.title-area
      li.name
        h1
          a(href='/') Hatfeild School HSA
      li.toggle-topbar.menu-icon
        a(href='#')
          span
   
    section.top-bar-section
      ul.left
        li.divider
        li.active
          a(href='request/new') Go Out
        li.divider
        li
          a(href='request/index') Baby Sit
        li.divider
        li
          a(href='circle/index') Circles
          
      ul.right
        li.divider
        li
          a(href='logout') Log Out
        li.divider
        li
          a(href='login') Log In
        li.divider
        li
          a(href='register') Register        
           
  #main(ng-cloak)
    .container
      .row.content
        .small-12
          div.view-animate-container#content(ng-view)

          div#login-holder(ng-controller='LoginCtrl')
            h2 Log In

            form(ng-submit="submit()")
              div
                label Username
                input(type="text",name="username", ng-model="username")

              div
                label Password
                input(type="password",name="password", ng-model="password")

              div
                button.btn(type="submit") Log In
              p
                a(href='register') Register

block scripts
   
